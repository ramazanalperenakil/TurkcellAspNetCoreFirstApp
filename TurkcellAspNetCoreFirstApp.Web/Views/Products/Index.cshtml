
@{
    ViewData["Title"] = "Index";
}
@model List<Product>

<h1>Ürnler</h1>
<h1 class="btn btn-warnig"><a asp-controller="Products" asp-action="Add" >Ekle</a></h1>

<table  class="table form-control">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
      
    </thead>
    <tbody>
       @foreach (var item in Model)
       {
           <tr>
               <td>@item.Id</td>
               <td>@item.Name</td>
               <td>@item.Price</td>
               <td>@item.Stock</td>
               <td>Düzenle</td>
               <td class="btn btn-warnig"><a asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id" >Sil</a></td>
                <td class="btn btn-warnig"><a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>

            </tr>
       }
    </tbody>
</table>